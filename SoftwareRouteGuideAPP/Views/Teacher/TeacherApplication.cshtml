@model SoftwareRouteGuideAPP.Models.Teacher.TeacherApplication
@using Microsoft.AspNetCore.Http
<section class="px-5">
    <div class="container px-5">
        <!-- Contact form-->
        <div class=" rounded-3 py-5 px-4 px-md-5 ">
            <div class="text-center mb-5">
                <h1 class="fw-bolder">Eğitmenlik Başvurusu Yap</h1>
                <p class="lead fw-normal text-muted mb-0">Eğitmen olmak için talebini mesaj kısmına yaz, incelemeye alınacaksın..</p>
            </div>
            <div class="row gx-5 justify-content-center">
                <div class="col-lg-8 col-xl-6">
                    <form method="post" asp-controller="Teacher" asp-action="TeacherApplication">

                        <div class="form-floating mb-3">
                            <textarea class="form-control" id="message" asp-for="Message" type="text" placeholder="Enter your message here..." style="height: 10rem" data-sb-validations="required"></textarea>
                            <label for="message">Mesajınız</label>
                        </div>
                        <input type="hidden" asp-for="userID" value="@Context.Session.GetInt32("userID")" />
                        <div class="d-grid"><button class="btn btn-success btn-lg" type="submit">Gönder</button>
                    </form>
                </div>
            </div>
        </div>
        <!-- Contact cards-->

    </div>
</section>